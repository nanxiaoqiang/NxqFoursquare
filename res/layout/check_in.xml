<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/venue_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Venue Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/venue_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venue ID" />

    <TextView
        android:id="@+id/venue_latitude"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Venue Latitude"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/venue_longitude"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Venue Longitude"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/venue_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venue Address"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/venue_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venue Category" />

    <TextView
        android:id="@+id/venue_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venue Distance" />

    <TextView
        android:id="@+id/venue_here_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venue DHere Now" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#80000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/cb_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Twitter" />

        <CheckBox
            android:id="@+id/cb_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Facebook" />

        <CheckBox
            android:id="@+id/cb_public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Public" />
    </LinearLayout>

    <EditText
        android:id="@+id/et_shout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn_check_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check-in" />

</LinearLayout>
